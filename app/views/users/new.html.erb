<h1 style="margin-left: 250px">Find the best!</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.submit "Go", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>